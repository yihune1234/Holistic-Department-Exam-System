@model List<HolisticDepartmentExamSystem.Models.User>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card fade-in-up">
    <div class="card-header">
        <h3 class="card-title">Staff & Coordinators</h3>
        <a asp-action="CreateUser" class="btn-custom btn-primary-custom">
            <span>‚ûï</span> Add New User
        </a>
    </div>

    <div class="table-responsive">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th style="text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 600;">@user.Username</div>
                            </td>
                            <td>
                                @if (user.Role != null)
                                {
                                    @if (user.Role.RoleName == "Admin")
                                    {
                                        <span class="badge-custom badge-published">@user.Role.RoleName</span>
                                    }
                                    else if (user.Role.RoleName == "Coordinator")
                                    {
                                        <span class="badge-custom badge-active">@user.Role.RoleName</span>
                                    }
                                    else
                                    {
                                        <span class="badge-custom badge-draft">@user.Role.RoleName</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge-custom badge-inactive">N/A</span>
                                }
                            </td>
                            <td>
                                @if (user.Status)
                                {
                                    <span class="badge-custom badge-active">Active</span>
                                }
                                else
                                {
                                    <span class="badge-custom badge-inactive">Inactive</span>
                                }
                            </td>
                            <td style="color: var(--text-secondary); font-size: 0.875rem;">
                                @user.CreatedAt.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <div class="action-buttons" style="justify-content: center;">
                                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn-custom btn-outline-custom btn-icon" title="Edit">
                                        <span>‚úèÔ∏è</span>
                                    </a>
                                    
                                    <form asp-action="ToggleUserStatus" asp-route-userId="@user.UserId" method="post" style="display: inline;">
                                        <button type="submit" class="btn-custom btn-icon @(user.Status ? "btn-warning-custom" : "btn-success-custom")" title="@(user.Status ? "Deactivate" : "Activate")">
                                            <span>@(user.Status ? "üö´" : "‚úÖ")</span>
                                        </button>
                                    </form>

                                    @if (user.Username != "admin")
                                    {
                                        <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                            <button type="submit" class="btn-custom btn-danger-custom btn-icon" title="Delete">
                                                <span>üóëÔ∏è</span>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn-custom btn-outline-custom btn-icon" disabled title="Cannot delete admin">
                                            <span>üîí</span>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 3rem; color: var(--text-secondary);">
                            <div style="font-size: 3rem; margin-bottom: 1rem;">üë•</div>
                            <div style="font-size: 1.125rem;">No users found</div>
                            <div style="font-size: 0.875rem; margin-top: 0.5rem;">Create your first user to get started</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- User Statistics -->
@if (Model.Any())
{
    <div class="stats-grid" style="margin-top: 1.5rem;">
        <div class="stat-card">
            <div class="stat-icon">üë•</div>
            <div class="stat-label">Total Users</div>
            <div class="stat-value">@Model.Count</div>
        </div>

        <div class="stat-card success">
            <div class="stat-icon">‚úÖ</div>
            <div class="stat-label">Active Users</div>
            <div class="stat-value">@Model.Count(u => u.Status)</div>
        </div>

        <div class="stat-card info">
            <div class="stat-icon">üë®‚Äçüè´</div>
            <div class="stat-label">Coordinators</div>
            <div class="stat-value">@Model.Count(u => u.Role?.RoleName == "Coordinator")</div>
        </div>

        <div class="stat-card warning">
            <div class="stat-icon">üîë</div>
            <div class="stat-label">Admins</div>
            <div class="stat-value">@Model.Count(u => u.Role?.RoleName == "Admin")</div>
        </div>
    </div>
}
