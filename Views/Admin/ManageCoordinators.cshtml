@model List<HolisticDepartmentExamSystem.Models.User>
@{
    ViewData["Title"] = "Manage Coordinators";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card fade-in-up">
    <div class="card-header">
        <div>
            <h3 class="card-title">Coordinator Management</h3>
            <p style="color: var(--text-secondary); font-size: 0.875rem; margin: 0.5rem 0 0 0;">
                Manage exam coordinators and their permissions
            </p>
        </div>
        <a asp-action="CreateUser" class="btn-custom btn-primary-custom">
            <span>‚ûï</span> Add Coordinator
        </a>
    </div>

    <div class="table-responsive">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th style="text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var coordinator in Model)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 600;">@coordinator.Username</div>
                            </td>
                            <td>
                                @if (coordinator.Status)
                                {
                                    <span class="badge-custom badge-active">Active</span>
                                }
                                else
                                {
                                    <span class="badge-custom badge-inactive">Inactive</span>
                                }
                            </td>
                            <td style="color: var(--text-secondary); font-size: 0.875rem;">
                                @coordinator.CreatedAt.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                <div class="action-buttons" style="justify-content: center;">
                                    <a asp-action="EditUser" asp-route-id="@coordinator.UserId" class="btn-custom btn-outline-custom btn-icon" title="Edit">
                                        <span>‚úèÔ∏è</span>
                                    </a>
                                    
                                    <form asp-action="DeleteUser" asp-route-id="@coordinator.UserId" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this coordinator?');">
                                        <button type="submit" class="btn-custom btn-danger-custom btn-icon" title="Delete">
                                            <span>üóëÔ∏è</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 3rem; color: var(--text-secondary);">
                            <div style="font-size: 3rem; margin-bottom: 1rem;">üë®‚Äçüè´</div>
                            <div style="font-size: 1.125rem;">No coordinators found</div>
                            <div style="font-size: 0.875rem; margin-top: 0.5rem;">Create your first coordinator to get started</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Coordinator Statistics -->
@if (Model.Any())
{
    <div class="stats-grid" style="margin-top: 1.5rem;">
        <div class="stat-card">
            <div class="stat-icon">üë®‚Äçüè´</div>
            <div class="stat-label">Total Coordinators</div>
            <div class="stat-value">@Model.Count</div>
        </div>

        <div class="stat-card success">
            <div class="stat-icon">‚úÖ</div>
            <div class="stat-label">Active</div>
            <div class="stat-value">@Model.Count(c => c.Status)</div>
        </div>

        <div class="stat-card warning">
            <div class="stat-icon">‚ùå</div>
            <div class="stat-label">Inactive</div>
            <div class="stat-value">@Model.Count(c => !c.Status)</div>
        </div>

        <div class="stat-card info">
            <div class="stat-icon">üìÖ</div>
            <div class="stat-label">Latest Added</div>
            <div class="stat-value" style="font-size: 1rem;">
                @Model.OrderByDescending(c => c.CreatedAt).FirstOrDefault()?.CreatedAt.ToString("MMM dd")
            </div>
        </div>
    </div>
}
