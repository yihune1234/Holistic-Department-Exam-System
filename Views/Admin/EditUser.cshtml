@model HolisticDepartmentExamSystem.Models.User
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card fade-in-up" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header">
        <h3 class="card-title">Edit User: @Model.Username</h3>
        <a asp-action="ManageUsers" class="btn-custom btn-outline-custom">
            <span>‚Üê</span> Back to Users
        </a>
    </div>

    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group-custom">
            <label class="form-label-custom" asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control-custom" placeholder="Enter username" required />
            <span asp-validation-for="Username" style="color: #ff6b6b; font-size: 0.875rem; margin-top: 0.25rem; display: block;"></span>
        </div>

        <div class="form-group-custom">
            <label class="form-label-custom" for="password">New Password</label>
            <input type="password" name="password" id="password" class="form-control-custom" placeholder="Leave blank to keep current password" />
            <p style="color: var(--text-secondary); font-size: 0.75rem; margin-top: 0.5rem;">
                üí° Only fill this field if you want to change the password
            </p>
        </div>

        <div class="form-group-custom">
            <label class="form-label-custom" asp-for="RoleId">Role</label>
            <select asp-for="RoleId" class="form-control-custom" required>
                <option value="">-- Select Role --</option>
                @foreach (var role in ViewBag.Roles as List<HolisticDepartmentExamSystem.Models.Role>)
                {
                    <option value="@role.RoleId" selected="@(role.RoleId == Model.RoleId)">@role.RoleName</option>
                }
            </select>
            <span asp-validation-for="RoleId" style="color: #ff6b6b; font-size: 0.875rem; margin-top: 0.25rem; display: block;"></span>
        </div>

        <div class="form-group-custom">
            <label class="form-label-custom">Status</label>
            <div style="display: flex; gap: 1rem; align-items: center; padding: 0.875rem 1rem; background: var(--sidebar-bg); border: 1px solid var(--border-color); border-radius: 10px;">
                <input type="checkbox" asp-for="Status" id="statusCheck" style="width: 20px; height: 20px; cursor: pointer;" />
                <label for="statusCheck" style="margin: 0; cursor: pointer; color: var(--text-primary);">Active</label>
            </div>
        </div>

        <div class="form-group-custom">
            <div style="padding: 1rem; background: rgba(79, 172, 254, 0.1); border: 1px solid #4facfe; border-radius: 10px;">
                <p style="margin: 0; color: #4facfe; font-size: 0.875rem;">
                    <strong>‚ÑπÔ∏è User Information</strong><br/>
                    Created: @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                </p>
            </div>
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <button type="submit" class="btn-custom btn-primary-custom" style="flex: 1;">
                <span>‚úÖ</span> Update User
            </button>
            <a asp-action="ManageUsers" class="btn-custom btn-outline-custom" style="flex: 1; text-align: center;">
                <span>‚ùå</span> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
