@{
    ViewData["Title"] = "Manage Questions - " + Model.Exam.Title;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2>Manage Questions</h2>
                <p class="text-muted">Exam: @Model.Exam.Title</p>
            </div>
            <div>
                <a asp-action="Create" asp-controller="Question" asp-route-examId="@Model.Exam.Id" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Question
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Questions (@Model.Questions.Count)</h5>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="ActivateExam" asp-controller="Exam" asp-route-examId="@Model.Exam.Id" 
                           class="btn btn-success" onclick="return confirm('Activate this exam?')">
                            <i class="bi bi-play-circle"></i> Activate Exam
                        </a>
                        <a asp-action="GeneratePasswords" asp-route-examId="@Model.Exam.Id" class="btn btn-info">
                            <i class="bi bi-key"></i> Generate Passwords
                        </a>
                        <a asp-action="MonitorExam" asp-route-examId="@Model.Exam.Id" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> Monitor
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (!Model.Questions.Any())
                {
                    <div class="alert alert-info text-center">
                        <h4>No Questions Added Yet</h4>
                        <p>Start by adding questions to this exam.</p>
                        <a asp-action="Create" asp-controller="Question" asp-route-examId="@Model.Exam.Id" 
                           class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add First Question
                        </a>
                    </div>
                }
                else
                {
                    <div class="questions-container">
                        @for (int i = 0; i < Model.Questions.Count; i++)
                        {
                            var question = Model.Questions.ElementAt(i);
                            <div class="question-item mb-3">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0">
                                                Question @(i + 1)
                                                <span class="badge bg-primary">@question.Points points</span>
                                                <span class="badge bg-secondary">@question.QuestionType</span>
                                            </h6>
                                        </div>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-controller="Question" asp-route-id="@question.Id" 
                                               class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-controller="Question" asp-route-id="@question.Id" 
                                               class="btn btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form asp-action="Delete" asp-controller="Question" asp-route-id="@question.Id" 
                                                  method="post" onsubmit="return confirm('Delete this question?')">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <p class="question-text">@question.Text</p>
                                        
                                        <div class="options-list">
                                            <h6>Options:</h6>
                                            @foreach (var option in question.Options.OrderBy(o => o.Order))
                                            {
                                                <div class="option-item d-flex align-items-center mb-2">
                                                    <span class="option-letter me-2">@((char)('A' + option.Order))</span>
                                                    <span class="option-text @(option.IsCorrect ? "text-success fw-bold" : "")">
                                                        @option.Text
                                                        @if (option.IsCorrect)
                                                        {
                                                            <i class="bi bi-check-circle-fill text-success"></i>
                                                        }
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                        
                                        <div class="question-meta mt-2">
                                            <small class="text-muted">
                                                Created: @question.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="exam-summary mt-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5>Exam Summary</h5>
                                <div class="row">
                                    <div class="col-md-3">
                                        <strong>Total Questions:</strong><br>
                                        @Model.Questions.Count
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Total Points:</strong><br>
                                        @Model.Questions.Sum(q => q.Points)
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Question Types:</strong><br>
                                        @string.Join(", ", Model.Questions.GroupBy(q => q.QuestionType).Select(g => $"{g.Key}({g.Count()}"))
                                    </div>
                                    <div class="col-md-3">
                                        <strong>Duration:</strong><br>
                                        @Model.Exam.Duration minutes
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="d-flex justify-content-between">
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
            <div>
                @if (Model.Questions.Any())
                {
                    <a asp-action="GeneratePasswords" asp-route-examId="@Model.Exam.Id" class="btn btn-success">
                        <i class="bi bi-key"></i> Generate Passwords & Continue
                    </a>
                }
            </div>
        </div>
    </div>
</div>
