@model HolisticDepartmentExamSystem.Controllers.CoordinatorDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_CoordinatorLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h4 mb-0 fw-bold">System Overview</h2>
    <div class="text-muted small">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</div>
</div>

<!-- TOP STAT CARDS -->
<div class="stats-grid">
    <div class="stat-card blue">
        <div class="stat-header">
            <span class="stat-label">Total Exams</span>
            <div class="stat-icon"><i class="bi bi-journal-text"></i></div>
        </div>
        <div class="stat-value">@Model.TotalExams</div>
        <div class="stat-sub">All created exams</div>
    </div>

    <div class="stat-card green">
        <div class="stat-header">
            <span class="stat-label">Active Exams</span>
            <div class="stat-icon"><i class="bi bi-broadcast"></i></div>
        </div>
        <div class="stat-value">@Model.ActiveExams</div>
        <div class="stat-sub">Students can currently take</div>
    </div>

    <div class="stat-card orange">
        <div class="stat-header">
            <span class="stat-label">Scheduled</span>
            <div class="stat-icon"><i class="bi bi-calendar-check"></i></div>
        </div>
        <div class="stat-value">@Model.ScheduledExams</div>
        <div class="stat-sub">Published but not active</div>
    </div>

    <div class="stat-card purple">
        <div class="stat-header">
            <span class="stat-label">Completed</span>
            <div class="stat-icon"><i class="bi bi-check-all"></i></div>
        </div>
        <div class="stat-value">@Model.CompletedExams</div>
        <div class="stat-sub">Exams closed/ended</div>
    </div>

    <div class="stat-card red">
        <div class="stat-header">
            <span class="stat-label">Live Taking</span>
            <div class="stat-icon"><i class="bi bi-people"></i></div>
        </div>
        <div class="stat-value">@Model.CurrentTakingCount</div>
        <div class="stat-sub">Students currently inside</div>
    </div>

    @* HEMS: Real-time tracking *@
    <div class="stat-card cyan shadow-sm">
        <div class="stat-header">
            <span class="stat-label">System Online</span>
            <div class="stat-icon text-info"><i class="bi bi-person-check-fill"></i></div>
        </div>
        <div class="stat-value text-info">@Model.StudentsLoggedIn</div>
        <div class="stat-sub">Students active site-wide</div>
    </div>

    <div class="stat-card indigo shadow-sm">
        <div class="stat-header">
            <span class="stat-label">Exam Ready</span>
            <div class="stat-icon text-primary"><i class="bi bi-mortarboard-fill"></i></div>
        </div>
        <div class="stat-value text-primary">@Model.StudentsReady</div>
        <div class="stat-sub">Assigned & Online students</div>
    </div>
</div>

<div class="row">
    <!-- RECENT EXAMS TABLE -->
    <div class="col-lg-8">
        <div class="content-card">
            <div class="card-header">
                <h3 class="card-title">Recent Exam Activity</h3>
                <a asp-action="ExamList" class="btn btn-sm btn-link text-decoration-none">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Exam Title</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Assigned</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exam in Model.RecentExams)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold text-main">
                                        <a asp-action="ManageExam" asp-route-examId="@exam.ExamId" class="text-decoration-none text-main hover-primary">
                                            @exam.Title
                                        </a>
                                    </div>
                                    <div class="text-muted small">@exam.DurationMinutes mins</div>
                                </td>
                                <td>
                                    @switch (exam.Status)
                                    {
                                        case "Active":
                                            <span class="badge-soft badge-soft-green"><i class="bi bi-record-fill"></i> ACTIVE</span>
                                            break;
                                        case "Published":
                                            <span class="badge-soft badge-soft-blue"><i class="bi bi-check-circle"></i> PUBLISHED</span>
                                            break;
                                        case "Draft":
                                            <span class="badge-soft badge-soft-gray"><i class="bi bi-pencil"></i> DRAFT</span>
                                            break;
                                        case "Closed":
                                            <span class="badge-soft badge-soft-red"><i class="bi bi-lock"></i> CLOSED</span>
                                            break;
                                        default:
                                            <span class="badge-soft badge-soft-gray">@exam.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-muted small">@exam.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge-soft badge-soft-gray">@(exam.ExamPasswords?.Count ?? 0) Students</span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="MonitorExam" asp-route-examId="@exam.ExamId" class="btn btn-sm btn-academic-outline" title="Monitor">
                                            <i class="bi bi-broadcast"></i>
                                        </a>
                                        <a asp-action="ManageQuestions" asp-route-examId="@exam.ExamId" class="btn btn-sm btn-academic-outline" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.RecentExams.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-info-circle me-1"></i> No exams found. Create your first exam to get started.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- LIVE ACTIVITY PANEL -->
    <div class="col-lg-4">
        <div class="content-card">
            <div class="card-header bg-white">
                <h3 class="card-title">Live Activity Feed</h3>
                <span class="badge bg-success rounded-pill" style="font-size: 0.6rem;">LIVE</span>
            </div>
            <div class="activity-feed">
                @foreach (var activity in Model.LiveActivity)
                {
                    <div class="activity-item">
                        <div class="activity-marker bg-primary"></div>
                        <div class="activity-content">
                            <div class="activity-text">
                                <strong>@activity.Username</strong> @activity.Action
                            </div>
                            <div class="activity-time">
                                <i class="bi bi-clock me-1"></i> @activity.Timestamp.ToString("hh:mm tt")
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.LiveActivity.Any())
                {
                    <div class="p-5 text-center text-muted small">
                        No recent activity recorded
                    </div>
                }
            </div>
        </div>
    </div>
</div>
