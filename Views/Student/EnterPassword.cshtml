@{
    ViewData["Title"] = "Secure Access";
}

<div class="portal-wrapper py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="glass-card p-5">
                    <div class="text-center mb-5">
                        <div class="icon-circle bg-primary bg-opacity-10 text-primary mx-auto mb-4">
                            <i class="bi bi-shield-lock display-4"></i>
                        </div>
                        <h2 class="fw-bold text-navy">Authentication Required</h2>
                        <p class="text-muted">Enter your unique student access code to begin the examination session.</p>
                        <p class="small text-navy fw-bold mt-3">@ViewBag.ExamTitle</p>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger rounded-4 border-0 shadow-sm d-flex align-items-center gap-3 mb-4">
                            <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                            <div>@ViewBag.Error</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.Password))
                    {
                        <div class="access-code-display p-4 rounded-4 mb-5 text-center" style="background: rgba(0, 97, 242, 0.08); border: 2px solid rgba(0, 97, 242, 0.2);">
                            <div class="small text-muted mb-2 fw-bold text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">
                                <i class="bi bi-key-fill me-2"></i>Your Access Code
                            </div>
                            <div class="h3 fw-bold text-primary mb-0" style="letter-spacing: 4px; font-family: 'Courier New', monospace;">
                                @ViewBag.Password
                            </div>
                            <div class="small text-muted mt-3">
                                <i class="bi bi-info-circle me-1"></i> Copy this code and paste it below
                            </div>
                        </div>
                    }

                    <form asp-action="EnterPassword" method="post">
                        <input type="hidden" name="examId" value="@ViewBag.ExamId" />
                        
                        <div class="mb-5">
                            <div class="input-group input-group-lg custom-input-group">
                                <span class="input-group-text bg-transparent border-end-0 ps-4">
                                    <i class="bi bi-key-fill text-primary"></i>
                                </span>
                                <input type="text" id="password" name="password" class="form-control border-start-0 ps-2" placeholder="Paste Access Code Here" required autofocus />
                            </div>
                            <div class="form-text text-center mt-3 opacity-75">
                                <i class="bi bi-info-circle me-1"></i> Codes are unique per student and single-use only.
                            </div>
                        </div>

                        <div class="d-flex flex-column gap-3">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3 fw-bold shadow-lg">
                                Authenticate & Start <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                            <a class="btn btn-link text-decoration-none text-muted" asp-action="ExamList">
                                <i class="bi bi-arrow-left me-1"></i> Cancel and Return
                            </a>
                        </div>
                    </form>
                </div>

                <div class="mt-5 text-center px-4">
                    <div class="alert alert-light border-0 shadow-sm rounded-4 small py-3">
                        <i class="bi bi-eye-slash-fill me-2 text-primary"></i>
                        Once you start, the session will be monitored. Ensure you have a stable connection.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --navy-text: #0a1931;
        --border-radius: 20px;
    }

    body {
        background: linear-gradient(135deg, #f0f7ff 0%, #c9dfff 100%);
        min-height: 100vh;
        font-family: 'Inter', sans-serif;
    }

    .text-navy { color: var(--navy-text); }

    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.8);
        border-radius: var(--border-radius);
    }

    .icon-circle {
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .access-code-display {
        animation: slideIn 0.5s ease-out;
    }

    .custom-input-group .form-control {
        border-radius: 50px !important;
        background: white;
        border: 1px solid rgba(0, 0, 0, 0.1);
        font-size: 1.25rem;
        padding: 1.25rem;
        letter-spacing: 2px;
        text-align: center;
    }

    .custom-input-group .input-group-text {
        border-radius: 50px 0 0 50px !important;
        background: white;
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #0061f2;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0052cc;
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(0, 97, 242, 0.3) !important;
    }
</style>
